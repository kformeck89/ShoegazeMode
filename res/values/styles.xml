<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>
    
    <style name="TextViewBaseStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HelpTextViewStyleBase" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/help_instruction_text_size</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
    </style>
    <style name="HelpInstructionTextViewStyle" parent="@style/HelpTextViewStyleBase">
        <item name="android:layout_marginTop">@dimen/help_instruction_margin</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_marginLeft">@dimen/help_instruction_margin</item>
    </style>
    <style name="HelpListTextViewStyle" parent="@style/HelpTextViewStyleBase">
        <item name="android:layout_marginLeft">@dimen/help_list_margin_left</item>
        <item name="android:layout_marginTop">@dimen/help_list_margin_top</item>
    </style>
    <style name="TitleTextViewBaseStyle" parent="@style/TextViewBaseStyle">
        <item name="android:textSize">@dimen/about_title_text_size</item>
        <item name="android:fontFamily">"@string/font_roboto_regular"</item>
    </style>
    <style name="CardHeaderTextViewStyle" parent="@style/TitleTextViewBaseStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/card_details_color</item>
    </style>
    <style name="CardTitleTextViewStyle" parent="@style/TitleTextViewBaseStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/card_details_color</item>
    </style>
    <style name="CardSummaryTextViewStyle" parent="@style/TextViewBaseStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">@dimen/about_summary_text_size</item>
        <item name="android:textColor">@color/card_details_color</item>
        <item name="android:fontFamily">"@string/font_roboto_regular"</item>
    </style>
    
</resources>
